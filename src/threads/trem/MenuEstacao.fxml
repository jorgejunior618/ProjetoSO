                                    <Image url="@assets/train_mod.png" />
                                 </image>
                              </ImageView>
                              <Label layoutX="14.0" layoutY="119.0" text="Nome do Trem">
                                 <font>
                                    <Font name="Press Start K" size="12.0" />
                                 </font>
                              </Label>
                              <Label layoutX="14.0" layoutY="160.0" text="Capacidade de Carga">
                                 <font>
                                    <Font name="Press Start K" size="12.0" />
