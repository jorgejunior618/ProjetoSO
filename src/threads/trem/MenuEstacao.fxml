                              <TextField fx:id="capacidadeDeposito" layoutX="340.0" layoutY="200.0" prefHeight="23.0" prefWidth="144.0" promptText="Quantidade de Caixas" />
                              <Button fx:id="proximoEstacao" layoutX="429.0" layoutY="277.0" mnemonicParsing="false" onAction="#irParaTrem" text="Próximo">
                                 <font>
                                    <Font name="Press Start K" size="11.0" />
                                 </font>
                              </Button>
                              <Button fx:id="menuEstacao" layoutX="14.0" layoutY="277.0" mnemonicParsing="false" onAction="#voltarParaMenu" text="Menu">
