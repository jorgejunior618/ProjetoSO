                              <Label layoutX="14.0" layoutY="169.0" text="ID do Empacotador">
                                 <font>
                                    <Font name="Press Start K" size="12.0" />
                                 </font>
                              </Label>
                              <Label layoutX="14.0" layoutY="208.0" text="Tempo de Empacotamento">
                                 <font>
                                    <Font name="Press Start K" size="12.0" />
